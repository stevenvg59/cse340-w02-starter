<% /* The Content Heading */ %>
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<% /* A Message Block */ %>
<!-- This is ready for flash messages for managemente page-->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
<% } %>

<% /* Displaying Inventory Items */ %>
<ul>
    <list><a href="/inv/addClassification/" title="Click to add a new vehicle classification">Add New Classification</a></list>
    <list><a href="/inv/addInventory/" title="Click to add a new vehicle">Add New Vehicle</a></list>
</ul>

<h2>Manage Inventory</h2>
<p>Choose a classification to see those inventory items.</p>
<%- classificationSelect %>

<table id="inventoryDisplay"></table>

