<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<div class="login-container">
    <div class="form">
        <form action="#" method="post">
            <label for="email">Email Address:</label>
            <input type="text" name="email" id="email">
            <label for="password">Password</label>
            <input type="text" name="password" id="password">
            <p>Passwords must be minimun of 12 characters and include 1 capital letter, 1 number
                and 1 special character.
            </p>
            <a class="showPass">Show Password</a>
            <button>Login</button>
        </form>
        
    </div>
    <div class="signup">
        <span>No account?<a ref="#">Sign-up</a></span>
    </div>

</div>